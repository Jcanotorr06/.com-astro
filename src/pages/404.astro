---
import Layout from "../layouts/Layout.astro"
---


<Layout title="404 Not Found">
    <section class="flex justify-center items-center w-screen h-screen">
        <div class="flex flex-col lg:flex-row">
            <article class="lg:border-r p-4">
                <h1 class="text-5xl font-bold text-red-500">404</h1>
            </article>
            <article class="p-4 flex flex-col gap-8">
                <div class="flex flex-col gap-4">
                    <h2 class="text-5xl font-bold">Page Not Found</h2>
                    <p class="text-gray-400 text-xl">The page you are looking for does not exist.</p>
                </div>
                <div class="flex w-full">
                    <a 
                        href="/"
                        class="px-5 py-3 border-gray-50 rounded-full border w-full text-center text-gray-50"
                    >
                        Go Home
                    </a>
                </div>
            </article>
        </div>
    </section>
</Layout>